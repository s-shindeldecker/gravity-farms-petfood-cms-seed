{
  "title": "Testimonial",
  "uid": "testimonial",
  "schema": [
    {
      "display_name": "Customer Name",
      "uid": "customer_name",
      "data_type": "text",
      "field_metadata": {
        "description": "Name of the customer providing the testimonial"
      },
      "mandatory": true,
      "unique": false
    },
    {
      "display_name": "Customer Quote",
      "uid": "customer_quote",
      "data_type": "rich_text_editor",
      "field_metadata": {
        "description": "The customer's testimonial quote"
      },
      "mandatory": true,
      "unique": false
    },
    {
      "display_name": "Pet Name",
      "uid": "pet_name",
      "data_type": "text",
      "field_metadata": {
        "description": "Name of the customer's pet"
      },
      "mandatory": true,
      "unique": false
    },
    {
      "display_name": "Pet Type",
      "uid": "pet_type",
      "data_type": "select",
      "field_metadata": {
        "description": "Type of pet"
      },
      "mandatory": true,
      "unique": false,
      "options": [
        {
          "value": "dog",
          "label": "Dog"
        },
        {
          "value": "cat",
          "label": "Cat"
        },
        {
          "value": "other",
          "label": "Other"
        }
      ]
    },
    {
      "display_name": "Customer Photo",
      "uid": "customer_photo",
      "data_type": "file",
      "field_metadata": {
        "description": "Optional photo of the customer or their pet"
      },
      "mandatory": false,
      "unique": false
    },
    {
      "display_name": "Rating",
      "uid": "rating",
      "data_type": "select",
      "field_metadata": {
        "description": "Customer rating (1-5 stars)"
      },
      "mandatory": false,
      "unique": false,
      "options": [
        {
          "value": "5",
          "label": "5 Stars"
        },
        {
          "value": "4",
          "label": "4 Stars"
        },
        {
          "value": "3",
          "label": "3 Stars"
        },
        {
          "value": "2",
          "label": "2 Stars"
        },
        {
          "value": "1",
          "label": "1 Star"
        }
      ]
    },
    {
      "display_name": "Featured",
      "uid": "featured",
      "data_type": "boolean",
      "field_metadata": {
        "description": "Whether this testimonial should be featured prominently"
      },
      "mandatory": false,
      "unique": false
    },
    {
      "display_name": "Product Used",
      "uid": "product_used",
      "data_type": "reference",
      "reference_to": [
        "product"
      ],
      "field_metadata": {
        "description": "Product the customer used (optional)"
      },
      "mandatory": false,
      "unique": false
    }
  ],
  "display_field": "customer_name",
  "description": "Customer testimonial content type for Gravity Farms Petfood"
} 